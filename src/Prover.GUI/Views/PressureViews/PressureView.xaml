<UserControl x:Class="Prover.GUI.Views.PressureViews.PressureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="TestTemplate">
            <ContentControl cal:View.Model="{Binding .}"></ContentControl>
        </DataTemplate>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <ContentControl  x:Name="PressureHeaderView" cal:View.Model="{Binding}" cal:View.Context="PressureHeaderView"/>    
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" >
            <ItemsControl 
                                  ItemTemplate="{StaticResource ResourceKey=TestTemplate}"
                                  ItemsSource="{Binding TestViews}"/>
        </StackPanel>


    </Grid>
</UserControl>
