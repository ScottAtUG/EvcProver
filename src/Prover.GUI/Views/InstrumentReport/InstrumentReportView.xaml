<UserControl x:Class="Prover.GUI.Views.InstrumentReport.InstrumentReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prover.GUI.Views.InstrumentReport"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="816" d:DesignWidth="1056">
    <Viewbox Width="795" Height="1040" Stretch="UniformToFill">
        <StackPanel Width="795" Height="1040" HorizontalAlignment="Center">
            <ContentControl cal:View.Model="{Binding SiteInformation}"
                            HorizontalAlignment="Center"
                            Margin="5" />
            <ContentControl cal:View.Model="{Binding PTVerification}"
                            HorizontalAlignment="Center"
                            Margin="5" />
            <ContentControl cal:View.Model="{Binding Volume}"
                            HorizontalAlignment="Center"
                            Margin="5" />
        </StackPanel>
    </Viewbox>
</UserControl>
