<UserControl x:Class="Prover.GUI.Views.VolumeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Border Margin="0"
					BorderBrush="{DynamicResource HeaderColour}"
					BorderThickness="0,1,0,0"
					Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
							
								   Style="{DynamicResource InstrumentSectionHeader}">
			   
							VOLUME
                </TextBlock>

                <Grid Grid.Row="1" Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.ColumnSpan="3">
                        <UniformGrid Columns="3">
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Name="Volume_CorrectedMultiplierDescription" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Cor. Multi. (90)</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Name="Volume_UnCorrectedMultiplierDescription" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">UnCor. Multi. (92)</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.DriveRateDescription, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Drive Rate (98)</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.MeterType, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Meter Type (432)</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.MeterDisplacement, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Meter Displacement</TextBlock>
                            </StackPanel>
                        </UniformGrid>

                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <StackPanel>
                            <Border Margin="5,5,5,5"
										BorderBrush="{DynamicResource HeaderColour}"
										BorderThickness="0,0,0,1">
                                <TextBlock FontSize="24"
											   Foreground="{DynamicResource HeaderFontColour}"
											   Text="Start" />
                            </Border>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.StartCorrected, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Corrected</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.StartUncorrected, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Uncorrected</TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <StackPanel>
                            <Border Margin="5,5,5,5"
										BorderBrush="{DynamicResource HeaderColour}"
										BorderThickness="0,0,0,1">
                                <TextBlock FontSize="24"
											   Foreground="{DynamicResource HeaderFontColour}"
											   Text="End" />
                            </Border>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.EndCorrected, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Corrected</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.EndUncorrected, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Uncorrected</TextBlock>

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2">
                        <StackPanel>
                            <Border Margin="5,5,5,5"
										BorderBrush="{DynamicResource HeaderColour}"
										BorderThickness="0,0,0,1">
                                <TextBlock FontSize="24"
											   Foreground="{DynamicResource HeaderFontColour}"
											   Text="Calculated" />
                            </Border>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.EvcCorrected, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">EVC Corrected Volume</TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ItemValues}" Text="{Binding Instrument.Volume.EvcUncorrected, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">EVC Uncorrected Volume</TextBlock>

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <Border Grid.Row="2"
								Grid.ColumnSpan="3"
								Margin="5,5,5,5"
								BorderBrush="{DynamicResource HeaderColour}"
								BorderThickness="0,1,0,0">
                        <Grid Grid.Row="2"
								  Grid.ColumnSpan="2"
								  Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <UniformGrid Columns="2" Grid.Row="0" HorizontalAlignment="Center" Grid.Column="0">
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock Style="{DynamicResource ItemValues}" Text="{Binding Instrument.Volume.PulseACount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Pulse A</TextBlock>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Right" Margin="20,0,0,0">
                                    <TextBlock Style="{DynamicResource ItemValues}" Text="{Binding Instrument.Volume.PulseBCount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Pulse B</TextBlock>
                                </StackPanel>
                            </UniformGrid>
                            <Grid Grid.Row="1" Grid.Column="0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBox Width="150" Style="{DynamicResource SimpleTextBox}"
													Text="{Binding Instrument.Volume.AppliedInput, 
																	Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Applied Input</TextBlock>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                                <StackPanel HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Left">
                                        <TextBlock  HorizontalAlignment="Center" Style="{DynamicResource ItemValues}" Text="{Binding Instrument.Volume.UnCorrectedPercentError, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">UnCor. % Error</TextBlock>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock HorizontalAlignment="Center" Style="{DynamicResource ItemValues}" Text="{Binding Instrument.Volume.CorrectedPercentError, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Style="{StaticResource ItemDescriptions}" Foreground="{DynamicResource HeaderFontColour}">Cor. % Error</TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button Width="100"
											Command="{Binding StartTestCommand}"
											Content="Start Test"
											Style="{StaticResource SimpleButton}" />
                                <Button Width="100"
											Command="{Binding StopTestCommand}"
											Content="Stop"
											Style="{StaticResource SimpleButton}" />
                            </StackPanel>
                        </Grid>

                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
